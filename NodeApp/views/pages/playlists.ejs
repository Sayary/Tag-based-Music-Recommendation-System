
<html>
<head>
  <title>Your Playlists</title>
  <% include ../partials/header %>
</head>
<body style="background: black url(background.jpg) no-repeat fixed center center;">
  <% include ../partials/navbar %>
  <div class="row">
      <div class="jumbotron" style="padding:30px; opacity: 0.9; margin:60px 100px auto 100px; overflow: scroll;">
      <div class="col-sm-4">
          <h2><%= username %>'s Playlists<h2>
        </div>
        <div class = "row">
            <form class="form-group col-md-4 col-md-offset-4" method="post" action="/newlist">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Add New Playlist", name = "query">
                <span class="input-group-btn">
                  <button class="btn btn-default" type="submit">Add New Playlist</button>
                </span>
              </div>
            </form>
        </div>
        <div class="row">
          <table class="table table-hover table-striped" style = "magin: 0px 100px 10px 100px; text-align: center;">
            <tbody>
              <% list.forEach(function(l) { %>
                  <tr>
                    <td><a href= /playlist/<%= l.list_id %>><%= l.list_name %></a></td>
                    <td><a href=/removelist/<%= l.list_id %>>Remove Playlist</a></td>
                  </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
  </div>
</body>