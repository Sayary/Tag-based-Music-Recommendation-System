
<html>
<head>
  <title>Your Playlists</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.4/cosmo/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.4/cosmo/bootstrap.min.css"></script>
</head>
<body style="background: black url(background.jpg) no-repeat fixed center center;">
  <% include ../partials/navbar %>
  <div class="row">
      <div class="jumbotron" style="padding:30px; opacity: 0.9; margin:60px 100px auto 100px; overflow: scroll;">
        <div class="col-md-2">
          <h3>Playlists<h3>
        </div>
        <div class="row">
        <form class="form-group col-md-4 col-md-offset-4" method="post" action="/newlist">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Add New Playlist", name="newlistname">
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Add New Playlist</button>
            </span>
          </div>
        </form>
        </div >
        <div class="row">
          <table class="table table-hover table-striped" style = "magin: 0px 100px 10px 100px; text-align: right;">
              <tbody>
                <% list.forEach(function(l) { %>
                    <tr>
                      <td><%= l.track_name %></td>
                    </tr>
                <% }); %>
              </tbody>
            </table>
        </div>
      </div>
  </div>
</body>
